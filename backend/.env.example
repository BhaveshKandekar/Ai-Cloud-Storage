# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/ai-cloud-storage

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_access_key_here
